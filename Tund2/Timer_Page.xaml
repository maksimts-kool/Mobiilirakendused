<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tund2.Timer_Page"
             Title="Timer Page">

    <ContentPage.Content>
        <VerticalStackLayout VerticalOptions="Center"
                Spacing="20"
                Padding="20">

            <FlexLayout Direction="Column"
                        AlignItems="Center"
                        JustifyContent="SpaceEvenly"
                        HeightRequest="200">

                <Label x:Name="lbl"
                       Text="Vajuta nupule käivitamiseks"
                       FontSize="20"
                       BackgroundColor="Beige"
                       TextColor="Black"
                       Padding="10">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Button x:Name="timer_btn"
                        Text="Näita aega"
                        FontSize="Large"
                        BackgroundColor="Teal"
                        TextColor="White"
                        Clicked="timer_btn_Clicked"/>

            </FlexLayout>

            <Button x:Name="tagasi"
                    Text="Tagasi"
                    FontSize="Large"
                    BackgroundColor="Gray"
                    TextColor="White"
                    Clicked="tagasi_Clicked"/>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>